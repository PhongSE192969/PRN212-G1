<Window x:Class="MilkTea.GUI.Views.AddToCartDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Thêm vào giỏ hàng" 
        Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Background="#F5F5F5">

    <Border Background="White" Padding="20" Margin="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Product Info -->
            <StackPanel Grid.Row="0">
                <TextBlock x:Name="txtProductName"
                           Text="Product Name"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#FF6B35"
                           Margin="0,0,0,10"/>
                
                <TextBlock x:Name="txtProductPrice"
                           FontSize="16"
                           Margin="0,0,0,20">
                    <Run Text="Giá:"/>
                    <Run Text="0" FontWeight="Bold"/>
                    <Run Text="đ" FontWeight="Bold"/>
                </TextBlock>
            </StackPanel>

            <!-- Options -->
            <StackPanel Grid.Row="1">
                <!-- Quantity -->
                <TextBlock Text="Số lượng:" FontSize="14" Margin="0,0,0,5"/>
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <Button Grid.Column="0"
                            Content="−"
                            Width="40"
                            Height="40"
                            FontSize="20"
                            FontWeight="Bold"
                            Style="{StaticResource ModernButton}"
                            Click="BtnDecrease_Click"/>
                    
                    <TextBox x:Name="txtQuantity"
                             Grid.Column="1"
                             Text="1"
                             FontSize="18"
                             FontWeight="Bold"
                             TextAlignment="Center"
                             VerticalContentAlignment="Center"
                             Height="40"
                             Margin="10,0"
                             IsReadOnly="True"/>
                    
                    <Button Grid.Column="2"
                            Content="+"
                            Width="40"
                            Height="40"
                            FontSize="20"
                            FontWeight="Bold"
                            Style="{StaticResource ModernButton}"
                            Click="BtnIncrease_Click"/>
                </Grid>

                <!-- Topping -->
                <TextBlock Text="Chọn topping (tuỳ chọn):" FontSize="14" Margin="0,0,0,5"/>
                <ComboBox x:Name="cboTopping"
                          Height="40"
                          FontSize="14"
                          Padding="10"
                          SelectionChanged="CboTopping_SelectionChanged">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                                <Run Text="{Binding ToppingName}"/>
                                <Run Text=" (+"/>
                                <Run Text="{Binding Price, StringFormat=N0}"/>
                                <Run Text="đ)"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <!-- Total Price -->
                <Border Background="#FFF3E0"
                        CornerRadius="5"
                        Padding="15"
                        Margin="0,20,0,0">
                    <Grid>
                        <TextBlock Text="Tổng tiền:" FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock x:Name="txtTotalPrice"
                                   Text="0 đ"
                                   FontSize="20"
                                   FontWeight="Bold"
                                   Foreground="#FF6B35"
                                   HorizontalAlignment="Right"/>
                    </Grid>
                </Border>
            </StackPanel>

            <!-- Buttons -->
            <Grid Grid.Row="2" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                
                <Button Grid.Column="0"
                        Content="Hủy"
                        Height="45"
                        FontSize="16"
                        Background="#999999"
                        Foreground="White"
                        FontWeight="SemiBold"
                        BorderThickness="0"
                        Margin="0,0,5,0"
                        Click="BtnCancel_Click"/>
                
                <Button Grid.Column="1"
                        Content="Thêm vào giỏ"
                        Height="45"
                        FontSize="16"
                        Style="{StaticResource ModernButton}"
                        Margin="5,0,0,0"
                        Click="BtnAdd_Click"/>
            </Grid>
        </Grid>
    </Border>
</Window>
