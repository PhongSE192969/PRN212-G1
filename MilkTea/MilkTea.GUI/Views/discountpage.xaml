<Window x:Class="MilkTea.GUI.Views.discountpage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản lý mã giảm giá"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- BẢNG MÃ GIẢM GIÁ -->
        <DataGrid x:Name="dgDiscounts"
                  Grid.Row="0"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  Margin="0,0,0,10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding DiscountId}" Width="60"/>
                <DataGridTextColumn Header="Mã" Binding="{Binding Code}" Width="100"/>
                <DataGridTextColumn Header="Mô tả" Binding="{Binding Description}" Width="*"/>
                <DataGridTextColumn Header="%" Binding="{Binding Percentage}" Width="80"/>
                <DataGridTextColumn Header="Hết hạn" Binding="{Binding ExpireDate, StringFormat=yyyy-MM-dd}" Width="120"/>
            </DataGrid.Columns>
        </DataGrid>

        <!-- NÚT CHỨC NĂNG -->
        <StackPanel Grid.Row="1"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right">
            <Button Content="Thêm"
                    Width="90" Height="30" Margin="5"
                    Click="BtnAdd_Click"/>
            <Button Content="Sửa"
                    Width="90" Height="30" Margin="5"
                    Click="BtnEdit_Click"/>
            <Button Content="Xóa"
                    Width="90" Height="30" Margin="5"
                    Click="BtnDelete_Click"/>
            <Button Content="In"
                    Width="90" Height="30" Margin="5"
                    Click="BtnPrint_Click"/>
            <Button Content="Thoát"
                    Width="90" Height="30" Margin="5"
                    Click="BtnExit_Click"/>
        </StackPanel>
    </Grid>
</Window>
