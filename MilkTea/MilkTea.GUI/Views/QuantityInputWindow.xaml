<?xml version="1.0" encoding="utf-8"?>
<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="MilkTea.GUI.Views.QuantityInputWindow"
    Title="Nhap So Luong Can Giam"
    Height="230" Width="400"
    WindowStartupLocation="CenterScreen"
  Background="#F5F5F5"
    ResizeMode="NoResize"
    ShowInTaskbar="False"
  WindowStyle="None"
    AllowsTransparency="True">
 
    <Border Background="White" CornerRadius="10" Margin="10">
        <Grid>
      <Grid.RowDefinitions>
    <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
       <RowDefinition Height="Auto"/>
    <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

 <!-- Title -->
   <TextBlock Grid.Row="0"
                Text="Nhap So Luong Can Giam"
            FontSize="16"
 FontWeight="Bold"
Margin="20,20,20,10"
             Foreground="#FF6B35"/>

       <!-- Current Quantity Info -->
          <TextBlock Grid.Row="1"
 x:Name="txtCurrentQuantity"
            Text="So luong hien tai: 0"
  FontSize="13"
   Margin="20,0,20,10"
   Foreground="#666"/>

         <!-- Quantity Input -->
            <StackPanel Grid.Row="2" Margin="20,10,20,15">
  <TextBlock Text="Nhap so luong can tru:" Margin="0,0,0,5" FontSize="13"/>
        <TextBox x:Name="txtQuantityReduce"
    Height="35"
      Padding="8"
       FontSize="14"
      Text="1"
       Foreground="#333"/>
     </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" Margin="20,0,20,15">
 <Button Content="OK"
  Background="#4CAF50"
        Foreground="White"
      Width="80"
   Height="35"
      Margin="0,0,10,0"
   Click="BtnOK_Click"/>
    <Button Content="Cancel"
                  Background="#757575"
           Foreground="White"
       Width="80"
  Height="35"
     Click="BtnCancel_Click"/>
    </StackPanel>
        </Grid>
  </Border>
</Window>
