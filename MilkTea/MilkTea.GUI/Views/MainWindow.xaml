                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox x:Name="txtDiscountCode"
                                     Grid.Column="0"
                                     Style="{StaticResource ModernTextBox}"
                                     Height="35"/>
                            <Button Grid.Column="1"
                                    Content="Ãp dá»¥ng"
                                    Style="{StaticResource ModernButton}"
                                    Width="80"
                                    Height="35"
                                    Margin="5,0,0,0"
                                    Click="BtnApplyDiscount_Click"/>
                        </Grid>
                        <TextBlock x:Name="txtDiscountInfo"
                                   Text=""
                                   Foreground="Green"
                                   FontSize="12"
                                   Margin="0,5,0,0"/>
                    </StackPanel>

                    <!-- Totals & Checkout -->
                    <StackPanel Grid.Row="3" Margin="0,20,0,0">
                        <Border BorderBrush="#E0E0E0" BorderThickness="0,1,0,0" Padding="0,15,0,0">
                            <StackPanel>
                                <!-- Subtotal -->
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Táº¡m tÃ­nh:" FontSize="14"/>
                                    <TextBlock x:Name="txtSubtotal" 
                                               Text="0 Ä‘"
                                               FontSize="14"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                                
                                <!-- VAT -->
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="VAT (10%):" FontSize="14"/>
                                    <TextBlock x:Name="txtVAT"
                                               Text="0 Ä‘"
                                               FontSize="14"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                                
                                <!-- Discount -->
                                <Grid Margin="0,0,0,8">
                                    <TextBlock Text="Giáº£m giÃ¡:" FontSize="14"/>
                                    <TextBlock x:Name="txtDiscount"
                                               Text="0 Ä‘"
                                               FontSize="14"
                                               Foreground="Red"
                                               HorizontalAlignment="Right"/>
                                </Grid>
                                
                                <!-- Total -->
                                <Grid Margin="0,10,0,15">
                                    <TextBlock Text="Tá»”NG Cá»˜NG:" 
