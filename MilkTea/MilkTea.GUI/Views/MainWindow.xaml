            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF6B35" Padding="20,15">
            <Grid>
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
