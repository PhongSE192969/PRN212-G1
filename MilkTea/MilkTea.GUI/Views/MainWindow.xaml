                    <!-- Cart Items -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                        <ItemsControl x:Name="lstCart">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Border BorderBrush="#E0E0E0"
                                            BorderThickness="0,0,0,1"
                                            Padding="0,10">
                                        <Grid>
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="Auto"/>
                                            </Grid.ColumnDefinitions>
                                            
                                            <StackPanel Grid.Column="0">
                                                <TextBlock Text="{Binding DisplayName, Mode=OneWay}"
                                                           FontWeight="SemiBold"
                                                           TextWrapping="Wrap"/>
                                                <TextBlock Margin="0,5,0,0">
                                                    <Run Text="{Binding Quantity, Mode=OneWay}"/>
                                                    <Run Text="x"/>
                                                    <Run Text="{Binding UnitPrice, Mode=OneWay, StringFormat=N0}"/>
                                                    <Run Text="Ä‘"/>
                                                </TextBlock>
                                                <TextBlock FontWeight="Bold" Foreground="#FF6B35">
                                                    <Run Text="{Binding Subtotal, Mode=OneWay, StringFormat=N0}"/>
                                                    <Run Text="Ä‘"/>
                                                </TextBlock>
                                            </StackPanel>
                                            
                                            <Button Grid.Column="1"
                                                    Content="âœ•"
                                                    Width="30"
                                                    Height="30"
                                                    Background="#F44336"
                                                    Foreground="White"
                                                    BorderThickness="0"
                                                    FontWeight="Bold"
                                                    Cursor="Hand"
                                                    Click="BtnRemoveItem_Click"
                                                    Tag="{Binding}"/>
                                        </Grid>
                                    </Border>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </ScrollViewer>

                    <!-- Discount Code -->
                    <StackPanel Grid.Row="2" Margin="0,15,0,0">
                        <TextBlock Text="MÃ£ giáº£m giÃ¡:" FontSize="14" Margin="0,0,0,5"/>
                        <Grid>
