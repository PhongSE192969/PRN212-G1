            </Grid.ColumnDefinitions>

            <!-- Left Panel: Products -->
            <Border Grid.Column="0" 
                    Background="White" 
                    CornerRadius="10" 
                    Padding="15"
                    Margin="0,0,10,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
