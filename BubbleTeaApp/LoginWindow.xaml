<Window x:Class="BubbleTeaApp.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng nhập hệ thống"
        Height="450" Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FFF8F5">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="#FF6B35" Padding="20,15" Height="80">
            <TextBlock Text="🧋 HỆ THỐNG ĐẶT HÀNG TRÀ SỮA"
                       FontSize="26" FontWeight="Bold"
                       Foreground="White"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Form -->
        <Border Grid.Row="1"
                Width="360"
                Height="320"
                Background="White"
                CornerRadius="15"
                BorderBrush="#FF6B35"
                BorderThickness="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Top"
                Padding="20" Margin="0,24,0,0">
            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="Đăng nhập"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="#FF6B35"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBox x:Name="txtUsername"
                         Width="280"
                         Height="40"
                         FontSize="14"
                         Margin="0,0,0,10"
                         Padding="10"
                         Foreground="#222"
                         CaretBrush="#222"
                         Tag="Tên đăng nhập">
                    <TextBox.Style>
                        <Style TargetType="TextBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="TextBox">
                                        <Grid>
                                            <Border Background="#FFF"
                                                    CornerRadius="8"
                                                    BorderBrush="#CCC"
                                                    BorderThickness="1">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                              Foreground="#222"/>
                                            </Border>
                                            <TextBlock x:Name="Placeholder"
                                                       Text="{TemplateBinding Tag}"
                                                       Foreground="#999"
                                                       Margin="14,0,0,0"
                                                       VerticalAlignment="Center"
                                                       IsHitTestVisible="False"
                                                       Visibility="Collapsed"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="Text" Value="">
                                                <Setter TargetName="Placeholder" Property="Visibility" Value="Visible"/>
                                            </Trigger>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <!-- Password -->
                <PasswordBox x:Name="txtPassword"
                             Width="280"
                             Height="40"
                             FontSize="14"
                             Padding="10"
                             Foreground="#222"
                             Tag="Mật khẩu"
                             PasswordChanged="PasswordBox_PasswordChanged">
                    <PasswordBox.Style>
                        <Style TargetType="PasswordBox">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="PasswordBox">
                                        <Grid>
                                            <Border Background="#FFF"
                                                    CornerRadius="8"
                                                    BorderBrush="#CCC"
                                                    BorderThickness="1">
                                                <ScrollViewer x:Name="PART_ContentHost"
                                                              />
                                            </Border>
                                            <TextBlock x:Name="Placeholder"
                                                       Text="{TemplateBinding Tag}"
                                                       Foreground="#999"
                                                       Margin="14,0,0,0"
                                                       VerticalAlignment="Center"
                                                       IsHitTestVisible="False"
                                                       Visibility="Visible"/>
                                        </Grid>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter TargetName="Placeholder" Property="Visibility" Value="Collapsed"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </PasswordBox.Style>
                </PasswordBox>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,20,0,0">
                    <Button Content="Đăng nhập"
                            Width="130" Height="40"
                            Background="#FF6B35"
                            Foreground="White"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Login_Click"
                            Margin="0,0,10,0">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>

                    <Button Content="Thoát"
                            Width="130" Height="40"
                            Background="#CCC"
                            Foreground="Black"
                            FontWeight="Bold"
                            BorderThickness="0"
                            Cursor="Hand"
                            Click="Exit_Click">
                        <Button.Style>
                            <Style TargetType="Button">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="Button">
                                            <Border Background="{TemplateBinding Background}" CornerRadius="8">
                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                            </Border>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </Button.Style>
                    </Button>
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</Window>
