<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- ==== PALETTE ==== -->
    <Color x:Key="Clr.Primary">#FF6A00</Color>
    <!-- Cam chủ đạo -->
    <Color x:Key="Clr.Primary.Dark">#E85D00</Color>
    <Color x:Key="Clr.Primary.Light">#FFF3E9</Color>
    <Color x:Key="Clr.Success">#15A362</Color>
    <!-- Xanh nút Thanh toán -->
    <Color x:Key="Clr.Danger">#E04F4F</Color>
    <!-- Đỏ nút Xoá -->
    <Color x:Key="Clr.Text">#333333</Color>
    <Color x:Key="Clr.Muted">#666666</Color>
    <Color x:Key="Clr.Border">#E6E6E6</Color>
    <Color x:Key="Clr.CardBg">#FFFFFFFF</Color>
    <SolidColorBrush x:Key="Brush.Primary" Color="{StaticResource Clr.Primary}"/>
    <SolidColorBrush x:Key="Brush.Primary.Dark" Color="{StaticResource Clr.Primary.Dark}"/>
    <SolidColorBrush x:Key="Brush.Primary.Light" Color="{StaticResource Clr.Primary.Light}"/>
    <SolidColorBrush x:Key="Brush.Success" Color="{StaticResource Clr.Success}"/>
    <SolidColorBrush x:Key="Brush.Danger" Color="{StaticResource Clr.Danger}"/>
    <SolidColorBrush x:Key="Brush.Text" Color="{StaticResource Clr.Text}"/>
    <SolidColorBrush x:Key="Brush.Muted" Color="{StaticResource Clr.Muted}"/>
    <SolidColorBrush x:Key="Brush.Border" Color="{StaticResource Clr.Border}"/>
    <SolidColorBrush x:Key="Brush.CardBg" Color="{StaticResource Clr.CardBg}"/>

    <!-- ==== COMMON ==== -->
    <CornerRadius x:Key="Radius.M">12</CornerRadius>
    <DropShadowEffect x:Key="Shadow.Card" BlurRadius="16" ShadowDepth="2" Opacity="0.18"/>

    <Style x:Key="Text.Title" TargetType="TextBlock">
        <Setter Property="FontSize" Value="22"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
    </Style>

    <!-- ==== CARD (khung ô sản phẩm / panel) ==== -->
    <Style x:Key="Card" TargetType="Border">
        <Setter Property="CornerRadius" Value="{StaticResource Radius.M}"/>
        <Setter Property="Background" Value="{StaticResource Brush.CardBg}"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Padding" Value="12"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Effect" Value="{StaticResource Shadow.Card}"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="BorderBrush" Value="{StaticResource Brush.Primary}"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- ==== BUTTON CHUẨN ==== -->
    <Style x:Key="Btn" TargetType="Button">
        <Setter Property="Padding" Value="14,10"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Background" Value="{StaticResource Brush.Primary}"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="{StaticResource Radius.M}"
                  Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource Brush.Primary.Dark}"/>
                        </Trigger>
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.6"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- BIẾN THỂ NÚT -->
    <Style x:Key="Btn.Success" BasedOn="{StaticResource Btn}" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Brush.Success}"/>
    </Style>
    <Style x:Key="Btn.Danger" BasedOn="{StaticResource Btn}" TargetType="Button">
        <Setter Property="Background" Value="{StaticResource Brush.Danger}"/>
    </Style>
    <Style x:Key="Btn.Outline" BasedOn="{StaticResource Btn}" TargetType="Button">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Primary}"/>
        <Setter Property="BorderThickness" Value="2"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Primary}"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border CornerRadius="{StaticResource Radius.M}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Background="{TemplateBinding Background}">
                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource Brush.Primary.Light}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==== TEXTBOX TÌM KIẾM ==== -->
    <Style TargetType="TextBox" x:Key="SearchBox">
        <Setter Property="Padding" Value="12"/>
        <Setter Property="BorderBrush" Value="{StaticResource Brush.Border}"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="Background" Value="White"/>
        <Setter Property="Foreground" Value="{StaticResource Brush.Text}"/>
        <Setter Property="SnapsToDevicePixels" Value="True"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="TextBox">
                    <Border CornerRadius="{StaticResource Radius.M}"
                  BorderBrush="{TemplateBinding BorderBrush}"
                  BorderThickness="{TemplateBinding BorderThickness}"
                  Background="{TemplateBinding Background}">
                        <ScrollViewer x:Name="PART_ContentHost" Margin="0"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsKeyboardFocused" Value="True">
                            <Setter Property="BorderBrush" Value="{StaticResource Brush.Primary}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==== CHIP CHECKBOX (topping) ==== -->
    <Style x:Key="Chip.CheckBox" TargetType="CheckBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <Border x:Name="root"
                  CornerRadius="18"
                  Padding="8,4"
                  Background="{StaticResource Brush.Primary.Light}"
                  BorderBrush="{StaticResource Brush.Border}" BorderThickness="1">
                        <ContentPresenter/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="root" Property="Background" Value="{StaticResource Brush.Primary}"/>
                            <Setter Property="Foreground" Value="White"/>
                            <Setter TargetName="root" Property="BorderBrush" Value="{StaticResource Brush.Primary.Dark}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ==== NUMBER STEPPER (+-) cho số lượng ==== -->
    <Style x:Key="QtyButton" TargetType="Button" BasedOn="{StaticResource Btn}">
        <Setter Property="Padding" Value="6,2"/>
        <Setter Property="Width" Value="36"/>
        <Setter Property="Height" Value="32"/>
    </Style>
    <Style x:Key="QtyBox" TargetType="TextBox" BasedOn="{StaticResource SearchBox}">
        <Setter Property="Width" Value="60"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="Padding" Value="0"/>
    </Style>

</ResourceDictionary>
